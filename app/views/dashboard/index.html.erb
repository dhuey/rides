<div class="row justify-content-center">
  <%= image_tag(asset_path("link-rides-hero.svg"), class: "app-header-image dashboard-img") %>
</div>

<div class="row profile-image-container text-center">
  <%= link_to current_user do %>
    <%= image_tag(current_user.display_profile_picture, size: "100", class: "round dashboard-profile") %>
  <% end %>
</div>

<div class="row text-center">
  <h1>Welcome, <%= current_user.first_name.capitalize %></h1>
</div>

<% if current_user.driver? %>
  <%= render 'driver' %>
<% else %>
  <%= render 'international' %>
<% end %>

<div class="row mt-5 mx-3">
  <h2>Your Rides</h2>
</div>

<% unless @rides.present? %>
  <div class="row info-box justify-content-center text-center app-info">
    <h3>Sorry, it looks like you haven't <%= current_user.international? ? "requested" : "given" %> any rides yet.</h3>
    <%= image_tag(asset_path("link-rides-about"), class: "app-header-image not-found-img") %>
  </div>
<% else %>
  <% @rides.each do |ride| %>
    <%= link_to(ride_path(ride)) do %>
      <div class="row info-box ride-box mx-3 justify-content-center align-items-center">
        <div class="col-3 ride-image p-0">
          <%= ride_image(ride) %>
        </div>
        <div class="col">
          <div class="row">
            <h3><%= "#{ride.origin.titleize} To #{ride.destination.titleize}" %></h3>
          </div>
          <div class="row">
            <p><%= ride_message(ride) %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

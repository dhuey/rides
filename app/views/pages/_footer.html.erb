<%= image_tag(asset_path("link-rides-footer.svg")) %>

<footer class="container-fluid justify-content-center text-center">
    <%= image_tag(asset_path("link-logo-black.svg")) %>
    <div class="row justify-content-center">
    <p>Images by <%= link_to "stories / Freepik", "http://freepik.com", class: "footer-link" %></p>
    <% if current_user %>
        <p><%= link_to "Your profile", user_path(current_user), method: :get, class: "footer-link" %></p>
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "footer-link footer-link-button" %>
    <% end %>
    </div>
</footer>

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <title>LINK Rides</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://use.typekit.net/dxy1jiy.css">
    <script src="https://kit.fontawesome.com/1a5e0c4ee9.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <div>
          <a class="navbar-brand" href=<%= "#{root_path}" %>>
            <%= image_tag(asset_path("link-logo-black.svg"), class: "brand-logo") %>
          </a>
        </div>
        <button class="navbar-toggler"
                type="button"
                aria-controls="navbarNavAltMarkup"
                aria-expanded="false"
                aria-label="Toggle navigation"
                id="navbar-toggle-button"
        >
          <%= icon("fa-solid", "bars") %>
        </button>
        <div class="text-end nav-links collapse navbar-collapse navbar-nav justify-content-end" id="navbar-toggle-menu">
          <%= link_to "About", "#about", class: "nav-link" %>
          <%= link_to "International Students", "#international-students", class: "nav-link" %>
          <%= link_to "Drivers", "#drivers", class: "nav-link" %>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          <%= link_to(new_user_registration_path, class: "nav-link") do %>
            <div class="primary-button">Sign Up For Free</div>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <% if notice %>
          <div class="alert alert-success text-center" role="alert">
            <%= notice %>
          </div>
        <% elsif alert %>
          <div class="alert alert-danger text-center" role="alert">
            <%= alert %>
          </div>
        <% end %>
      </div>
    </div>

    <%= yield %>

    <%= render "pages/footer" %>

  </body>
</html>

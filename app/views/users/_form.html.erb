<%= form_for @user do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  <div class="field">
    <%= f.label :email, class: "sign-up-label" %>
    <%= f.email_field :email, autocomplete: "email", class: "login-field sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, class: "sign-up-label" %>
    <%= f.phone_field :phone_number, class: "login-field sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :alternate_contact_method, class: "sign-up-label" %>
    <%= f.select :alternate_contact_method, options_for_select([["WeChat", "WeChat"], ["Facebook", "Facebook"], ["Whatsapp", "Whatsapp"], ["Instagram", "Instagram"], ["Line", "Line"]]), class: "login-field sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :alternate_contact_name, class: "sign-up-label" %>
    <%= f.text_field :alternate_contact_name, class: "login-field sign-up-field" %>
  </div>

  <% if @user.driver? %>
    <div class="field">
      <%= f.label :ministry, class: "sign-up-label" %>
      <%= f.text_field :ministry, class: "login-field sign-up-field" %>
    </div>
  <% end %>

  <div class="field" style="margin-top: .8em; line-height: 1em;">
    <%= f.label :email_interest, "I would like to receive information about events for international students", class: "sign-up-label" %>
    <%= f.check_box :email_interest %>
  </div>

  <% if @current_user.admin? %>
    <div class="field" style="margin-top: .8em; line-height: 1em;">
      <%= f.label :driver_verified, "Driver verified?", class: "sign-up-label" %>
      <%= f.check_box :driver_verified %>
    </div>
    <div class="field" style="margin-top: .8em; line-height: 1em;">
      <%= f.label :admin, "Administrator?", class: "sign-up-label" %>
      <%= f.check_box :admin %>
    </div>
  <% end %>

  <div class="actions d-flex justify-content-center">
    <%= f.submit "Save", class: "advance-btn" %>
  </div>
<% end %>
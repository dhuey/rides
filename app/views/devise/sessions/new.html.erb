<div class="text-center"><h1>International LINK Rides</h1></div>
<p class="text-center">Let&rsquo;s get you logged in:</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="d-flex justify-content-center"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email address", class: "login-field" %></div>
  </div>

  <div class="field">
    <div class="d-flex justify-content-center"><%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "login-field" %></div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field display-none">
      <div class="d-flex justify-content-center"><%= f.check_box :remember_me, default: true %> <%= f.label :remember_me, class: "small-text remember" %></div>
    </div>
  <% end %>

  <div class="actions d-flex justify-content-center">
    <%= f.submit "Log in", class: "advance-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


<div class="row">
  <%= link_to root_path do %>
    <div class="primary-button back-button">
      Back
    </div>
  <% end %>
</div>

<div class="row justify-content-center">
  <%= image_tag(asset_path("link-rides-driving.svg"), class: "app-header-image") %>
</div>

<div class="row text-center">
  <h1>Login To LINK Rides</h1>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row sign-up-form login-form">
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.email_field :email, autocomplete: "email", placeholder:"Email Address", class: "sign-up-field text-center" %>

      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "sign-up-field text-center" %>

      <%= f.submit "Log in", class: "primary-button" %>
    </div>
<% end %>

<div class="row text-center login-links">
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "small-text" %><br>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "small-text" %>
</div>


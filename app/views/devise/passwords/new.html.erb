<h1 class="text-center display-title">Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: app_user_password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class="d-flex justify-content-center text-center"><%= f.label :email, "Enter your email address and we'll send you password reset instructions", class: "small-text" %></div>
    <div class="d-flex justify-content-center"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email address", class: "login-field" %></div>
  </div>

  <div class="actions d-flex justify-content-center">
    <%= f.submit "Send instructions", class: "advance-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

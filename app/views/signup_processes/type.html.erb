<h1 class="text-center display-title">Sign up</h1>
<p class="text-center">Next, answer one quick question:</p>

<%= form_for(@user, url: wizard_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  <div class="sign-up-form">
    <div class="field">
      <p class="text-center">Are you an international student?</p>
      <%= f.label :international, "I am an international student", class: "sign-up-label" %>
      <%= f.check_box :international %><br>
    </div>

    <div class="actions d-flex justify-content-center">
      <%= f.submit "Next ->", class: "advance-btn" %>
    </div>
  </div>
<% end %>
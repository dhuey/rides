<h1 class="text-center display-title">Sign up</h1>
<p class="text-center">One last thing! Let&rsquo;s get your profile set up:</p>

<%= form_for(@user, url: wizard_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  <div class="sign-up-form">
    <div class="field">
      <%= f.label :first_name, class: "sign-up-label" %>
      <%= f.text_field :first_name, class: "login-field sign-up-field" %>
    </div>
    <div class="field">
      <%= f.label :last_name, class: "sign-up-label" %>
      <%= f.text_field :last_name, class: "login-field sign-up-field" %>
    </div>

    <div class="field">
      <%= f.label :gender, class: "sign-up-label" %>
      <%= f.select :gender, options_for_select([["Male", "male"], ["Female", "female"]]), include_blank: "Please select one" %>
    </div>

    <div class="field">
      <%= f.label :phone_number, class: "sign-up-label" %>
      <%= f.phone_field :phone_number, class: "login-field sign-up-field" %>
    </div>

    <% if @user.international? %>
      <div class="field">
        <%= f.label :nationality, class: "sign-up-label" %>
        <%= f.text_field :nationality, class: "login-field sign-up-field" %>
      </div>
      <div class="field">
        <%= f.label :alternate_contact_method, class: "sign-up-label" %>
        <%= f.select :alternate_contact_method, options_for_select([["WeChat", "WeChat"], ["Facebook", "Facebook"], ["Whatsapp", "Whatsapp"], ["Instagram", "Instagram"], ["Line", "Line"]]), include_blank: "Please select one", class: "login-field sign-up-field" %>
      </div>
      <div class="field">
        <%= f.label :alternate_contact_name, class: "sign-up-label" %>
        <%= f.text_field :alternate_contact_name, class: "login-field sign-up-field" %>
      </div>
      <div class="field" style="margin-top: .8em; line-height: 1em;">
        <%= f.label :email_interest, "I would like to receive information about events for international students", class: "sign-up-label" %>
        <%= f.check_box :email_interest %>
      </div>
    <% else %>
      <div class="field">
        <%= f.label :ministry, class: "sign-up-label" %>
        <%= f.text_field :ministry, class: "login-field sign-up-field" %>
      </div>

      <div class="field" style="margin-top: .8em; line-height: 1em;">
        <%= f.label :valid_driver, "I certify that I have a valid driver's license and car insurance, and that my license has not been suspended in the past two years", class: "sign-up-label" %>
        <%= f.check_box :valid_driver %>
      </div>
    <% end %>

    <div class="field" style="margin-top: .8em; line-height: 1em;">
        <%= f.label :accept_tac, "I have read and agree to the #{link_to("Terms and Conditions", terms_and_conditions_path, target: :_blank)}".html_safe, class: "sign-up-label tac-label" %>
        <%= f.check_box :accept_tac %>
      </div>

    <div class="actions d-flex justify-content-center">
      <%= f.submit "Submit", class: "advance-btn" %>
    </div>
  </div>
<% end %>
<div class="row mx-3 mt-5">
  <h2>Vehicles</h2>
</div>

<div class="row info-box app-info justify-content-center user-box">
  <div class="col-sm-8">
    <% if user.vehicles.any? %>
      <ul>
        <% user.vehicles.each do |vehicle| %>
          <li>
            <% if current_user == user || current_user.admin? %>
              <%= link_to vehicle.easy_name, user_vehicle_path(user, vehicle) %>
            <% else %>
              <%= vehicle.easy_name %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="row justify-content-center text-center">
      <h3><%= no_vehicles_message(user) %></h3>
      <%= image_tag(asset_path("link-rides-driving.svg"), class: "app-header-image not-found-img") %>
    </div>
  <% end %>
</div>
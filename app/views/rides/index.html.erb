<%= link_to "< Home", dashboard_path %><br>
<%= link_to("Request a ride", new_ride_path) if current_user.international? %>
<h1>Your Rides</h1>
<% unless @rides.present? %>
  <p>No rides available</p>
<% else %>
  <% @rides.each do |ride| %>
    <%= link_to(ride_path(ride)) do %>
      <div class="row ride-box">
        <div class="col-2 align-self-center ride-image p-0">
          <%= ride_image(ride) %>
        </div>
        <div class="col">
          <div class="row">
            <div class="col-10"><strong><%= "#{ride.origin} to #{ride.destination}" %></strong></div>
            <div class="col-2 ride-select-arrow">></div>
          </div>
          <div class="row">
            <div class="col-12 ride-desc"><%= ride_message(ride) %></div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>